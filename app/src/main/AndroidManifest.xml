<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bvbbr.bvb_brasil"
    android:versionCode="3"
    android:versionName="3.0">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bvbbrasilimg_round"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:largeHeap="true">

        <!-- Splash screen -->
        <activity
            android:name="com.bvbbr.bvb_brasil.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity Principal -->
        <activity
            android:name="com.bvbbr.bvb_brasil.ActivityPrincipal"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.bvbbr.bvb_brasil.BotoesActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.bvbbr.bvb_brasil.ChampionsLActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.bvbbr.bvb_brasil.EncontroActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.bvbbr.bvb_brasil.JogoSuperCupActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.bvbbr.bvb_brasil.PokalActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.bvbbr.bvb_brasil.SplashBundesligaActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.bvbbr.bvb_brasil.SplashChampionsActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.bvbbr.bvb_brasil.SplashEncontroActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.bvbbr.bvb_brasil.SplashPokalActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.bvbbr.bvb_brasil.SplashSuperCopa2Activity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.bvbbr.bvb_brasil.SplashSupercupActivity"
                  android:screenOrientation="portrait"/>
    </application>
</manifest>